<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="Authentication">
    <div ng-controller="NavController">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a ng-click="goToHome()" style="cursor:pointer">Home</a></li>
                <li><a ng-click="logout()" style="cursor:pointer">Logout</a></li>
@*                <li><a ng-click="goToMap()" style="cursor:pointer">Map</a></li>*@

            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAUISqPz3n4h03i8_kh3YfvolNYrynv7yA&libraries=places,visualization"async defer></script>
</body>
</html>
